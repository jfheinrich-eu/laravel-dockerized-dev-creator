services:
  # PHP Application
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: ${PREFIX_NAME}-app
    restart: unless-stopped
    volumes:
      - ${DOCKER_MOUNT_SOURCE}:/var/www/html
      - ./docker/php/local.ini:/usr/local/etc/php/conf.d/local.ini
    networks:
      - ${PREFIX_NAME}-network
    depends_on:
      - db
    environment:
      - DB_HOST=db
      - DB_DATABASE=${DB_DATABASE}
      - DB_USERNAME=${DB_USERNAME}
      - DB_PASSWORD=${DB_PASSWORD}
      - PUSHER_APP_ID=${PUSHER_APP_ID}
      - PUSHER_APP_KEY=${PUSHER_APP_KEY}
      - PUSHER_APP_SECRET=${PUSHER_APP_SECRET}
      - PUSHER_APP_CLUSTER=${PUSHER_APP_CLUSTER}

  # Nginx Web Server
  webserver:
    image: nginx:alpine
    container_name: ${PREFIX_NAME}-webserver
    restart: unless-stopped
    ports:
      - "8080:8080"
    volumes:
      - ${DOCKER_MOUNT_SOURCE}:/var/www/html
      # Use a single file mount instead of a directory
      - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf
    networks:
      - ${PREFIX_NAME}-network
    depends_on:
      - app

  # MySQL Database
  db:
    image: mysql:8.0
    container_name: ${PREFIX_NAME}-db
    restart: unless-stopped
    environment:
      - MYSQL_DATABASE=${DB_DATABASE}
      - MYSQL_ROOT_PASSWORD=${DB_PASSWORD}
      - MYSQL_PASSWORD=${DB_PASSWORD}
      - MYSQL_USER=${DB_USERNAME}
    volumes:
      - ${PREFIX_NAME}-data:/var/lib/mysql
    networks:
      - ${PREFIX_NAME}-network
    ports:
      - "3306:3306"

  # Redis for Cache and Queue
  redis:
    image: redis:alpine
    container_name: ${PREFIX_NAME}-redis
    restart: unless-stopped
    networks:
      - ${PREFIX_NAME}-network
    ports:
      - "6379:6379"

  mailpit:
    image: axllent/mailpit
    container_name: ${PREFIX_NAME}-mailpit
    restart: unless-stopped
    volumes:
      - ${PREFIX_NAME}-mailpit:/data
    networks:
      - ${PREFIX_NAME}-network
    ports:
      - 8825:8025
      - 1025:1025
    environment:
      MP_MAX_MESSSAGES: 5000
      MP_DATABASE: /data/mailpit.db
      MP_SMTP_AUTH_ACCEPT_ANY: 1
      MP_SMTP_AUTH_ALLOW_INSECURE: 1

  redisinsight:
    image: redis/redisinsight
    container_name: ${PREFIX_NAME}-redisinsight
    restart: unless-stopped
    volumes:
      - ${PREFIX_NAME}-redisinsight:/data
    networks:
      - ${PREFIX_NAME}-network
    ports:
      - 5540:5540

  phpmyadmin:
    image: phpmyadmin
    container_name: ${PREFIX_NAME}-phpmyadmin
    environment:
      - PMA_ARBITRARY=1
    networks:
      - ${PREFIX_NAME}-network
    ports:
      - 8888:80
    restart: unless-stopped
    
# Networks
networks:
  ${PREFIX_NAME}-network:
    driver: bridge

# Volumes
volumes:
  ${PREFIX_NAME}-data:
    driver: local
  ${PREFIX_NAME}-mailpit:
    driver: local
  ${PREFIX_NAME}-redisinsight:
    driver: local
